{
    "info": {
        "_postman_id": "movie-website-api",
        "name": "Movie Website API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"token\", jsonData.token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Movies",
            "item": [
                {
                    "name": "Get All Movies",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/movies",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Create Movie (Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Inception\",\n    \"description\": \"A thief who steals corporate secrets through the use of dream-sharing technology...\",\n    \"genre\": \"Sci-Fi\",\n    \"releaseDate\": \"2010-07-16\",\n    \"trailerUrl\": \"https://www.youtube.com/watch?v=YoHD9XEInc0\",\n    \"posterUrl\": \"https://m.media-amazon.com/images/M/MV5BMjAxMzY3NjcxNF5BMl5BanBnXkFtZTcwNTI5OTM0Mw@@._V1_.jpg\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/movies",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "movies"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Reviews",
            "item": [
                {
                    "name": "Get Reviews for Movie",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/reviews/:movieId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "reviews",
                                ":movieId"
                            ],
                            "variable": [
                                {
                                    "key": "movieId",
                                    "value": "REPLACE_WITH_MOVIE_ID"
                                }
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Create Review",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"rating\": 9,\n    \"title\": \"Amazing Movie!\",\n    \"comment\": \"Mind blowing concept and visuals.\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/reviews/:movieId",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "reviews",
                                ":movieId"
                            ],
                            "variable": [
                                {
                                    "key": "movieId",
                                    "value": "REPLACE_WITH_MOVIE_ID"
                                }
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8080"
        }
    ]
}